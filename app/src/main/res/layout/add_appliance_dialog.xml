<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_appliance_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Appliance Name" />

    <EditText
        android:id="@+id/edit_appliance_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Power Consumption (kWh)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edit_appliance_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Duration(in Hour)" />


    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Delete Appliance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>
