<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/nav_home"> <!-- Match bottom nav ID -->

    <!-- Bottom Navigation Items -->
    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.greensync.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/nav_dashboard"
        android:name="com.example.greensync.fragments.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard"/>

    <fragment
        android:id="@+id/nav_updates"
        android:name="com.example.greensync.fragments.UpdatesFragment"
        android:label="Updates"
        tools:layout="@layout/fragment_updates"/>

    <fragment
        android:id="@+id/nav_tips"
        android:name="com.example.greensync.fragments.TipsFragment"
        android:label="Tips"
        tools:layout="@layout/fragment_tips"/>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.greensync.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings"/>

</navigation>